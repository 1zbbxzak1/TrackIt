<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nutrition_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/previous"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:elevation="20dp"
            android:background="@drawable/prev"
            android:onClick="onBackButtonClick" />

        <androidx.cardview.widget.CardView
            android:id="@+id/searchView_card"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="#efefef"
            android:layout_margin="7dp"
            android:elevation="15dp"
            app:cardCornerRadius="20dp">

            <SearchView
                android:id="@+id/searchView"
                android:layout_width="333dp"
                android:layout_height="55dp"
                android:background="#3b4446"
                android:layout_gravity="center"
                android:iconifiedByDefault="false"
                android:elevation="15dp"
                android:queryBackground="@null"
                android:queryHint="Искать" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/add_cardview"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="20dp"
        android:elevation="15dp"
        app:cardBackgroundColor="#efefef">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:elevation="15dp"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                android:id="@+id/create_food"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:textSize="20sp"
                android:textColor="#3B4446"
                android:layout_gravity="center_vertical"
                android:text="Создать новый продукт" />

                <Button
                    android:id="@+id/addButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="91dp"
                    android:background="@drawable/add_product" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/frame_74"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="10dp"
        android:background="@drawable/back_pfc_food">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="44dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:textSize="10sp"
                android:textColor="#99cd4e"
                android:textAlignment="center"
                android:text="*приведены данные калорийности и БЖУ на 100 граммов продукта"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nameFood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Название"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:textSize="16sp"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/protein_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="51dp"
                android:text="Белки"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:textSize="16sp"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/fat_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:text="Жиры"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:textSize="16sp"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/carbs_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="13dp"
                android:text="Углеводы"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:textSize="16sp"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/calories_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="13dp"
                android:text="Ккал"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:textSize="16sp"
                android:textColor="@color/white" />

        </LinearLayout>

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/product_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="1dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

</LinearLayout>