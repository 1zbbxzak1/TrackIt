<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profile_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#eff2f3">

    <androidx.cardview.widget.CardView
        android:id="@+id/nutrition_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        app:cardCornerRadius="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:id="@+id/protein_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:text="Белки"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fat_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="55dp"
                android:text="Жиры"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/carbs_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="55dp"
                android:text="Углеводы"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/calories_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="50dp"
                android:text="Ккал"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:id="@+id/protein"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:text="0.0"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="76dp"
                android:text="0.0"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/carbs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="91dp"
                android:text="0.0"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/calories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="77dp"
                android:text="0.0"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/expandable_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp">
        <Button
            android:id="@+id/add_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_marginTop="9dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/card_border"
            android:text="+"
            android:textSize="20dp" />

        <com.robertlevonyan.views.expandable.Expandable
            android:id="@+id/expandable"
            android:layout_width="400dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/header"
                layout="@layout/header_view" />

            <include
                android:id="@+id/content"
                layout="@layout/content_view" />
        </com.robertlevonyan.views.expandable.Expandable>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/expandable2_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp">

        <Button
            android:id="@+id/add_button2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_marginTop="9dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/card_border"
            android:text="+"
            android:textSize="20dp" />

        <com.robertlevonyan.views.expandable.Expandable
            android:id="@+id/expandable2"
            android:layout_width="400dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/header"
                layout="@layout/header_view2" />

            <include
                android:id="@+id/content"
                layout="@layout/content_view2" />
        </com.robertlevonyan.views.expandable.Expandable>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/expandable3_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp">

        <Button
            android:id="@+id/add_button3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_marginTop="9dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/card_border"
            android:text="+"
            android:textSize="20dp" />

        <com.robertlevonyan.views.expandable.Expandable
            android:id="@+id/expandable3"
            android:layout_width="400dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/header"
                layout="@layout/header_view3" />

            <include
                android:id="@+id/content"
                layout="@layout/content_view3" />
        </com.robertlevonyan.views.expandable.Expandable>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/expandable4_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp">

        <Button
            android:id="@+id/add_button4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_marginTop="9dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/card_border"
            android:text="+"
            android:textSize="20dp" />

        <com.robertlevonyan.views.expandable.Expandable
            android:id="@+id/expandable4"
            android:layout_width="400dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/header"
                layout="@layout/header_view4" />

            <include
                android:id="@+id/content"
                layout="@layout/content_view4" />
        </com.robertlevonyan.views.expandable.Expandable>
    </androidx.cardview.widget.CardView>

</LinearLayout>
